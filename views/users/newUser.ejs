<%- include('../partials/head.ejs') -%>

   <div class="container mb-3">

      <h3 class="contentBoxTop mb-3">새로운 User 등록</h3>

      <form action="/users" method="post">

         <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label">Name*</label>
            <div class="col-sm-9">
               <input type="text" id="name" name="name" value="<%= user.name %>" class="form-control <%= (errors.name)?'is-invalid':'' %>">
               <% if(errors.name){ %>
               <span class="invalid-feedback"><%= errors.name.message %></span>
               <% } %>
            </div>
         </div>
         <div class="form-group row">
            <label for="emailId" class="col-sm-3 col-form-label">Email Id*</label>
            <div class="col-sm-9">
               <input type="text" id="emailId" name="emailId" value="<%= user.emailId %>" class="form-control <%= (errors.emailId)?'is-invalid':'' %>">
               <% if(errors.emailId){ %>
               <span class="invalid-feedback"><%= errors.emailId.message %></span>
               <% } %>
            </div>
         </div>
         <div class="form-group row">
            <label for="coNumber" class="col-sm-3 col-form-label">Co Number*</label>
            <div class="col-sm-9">
               <input type="text" id="coNumber" name="coNumber" value="" class="form-control <%= (errors.coNumber)?'is-invalid':'' %>">
               <% if(errors.coNumber){ %>
               <span class="invalid-feedback"><%= errors.coNumber.message %></span>
               <% } %>
            </div>
         </div>

         <p>
            <small>*Required</small>
         </p>

         <% if(errors.unhandled){ %>
            <div class="alert alert-danger">
               <%= errors.unhandled %>
            </div>
         <% } %>

         <div class="form-group">
            <a class="btn btn-light border text-underline-hover" href="/users">뒤로</a>
            <button type="submit" class="btn btn-light border text-underline-hover">저장</button>
         </div>
      
      </form>

   </div>
</body>
</html>

<%- include('../partials/head.ejs') -%>

   <div class="container table-responsive  mb-3">
      <h3 class="mb-3">User List</h3>
      <table class="table table-hover mt-2">
         <thead class="table-light">
            <tr>
               <th scope="col" class="col-2 text-center">이 름</th>
               <th scope="col" class="col-2 text-center">아이디</th>
               <th scope="col" class="col-2 text-center">is admin ?</th>
               <th scope="col" class="col-6 text-center">사 번</th>
            </tr>
         </thead>
         <tbody>
            
            <% if(users == null || users.length == 0){ %>
               <tr><li class="list-group-item"> There is no user yet.</li></tr>
            <% } %>
                        
            <% users.forEach(function(user) { %>
               <tr>
                  <td class="col-2 text-center"><%= user.name %></td>
                  <td class="col-2 text-center"><a class="text-dark text-underline-hover" href="/users/<%= user.emailId %>"><%= user.emailId %></a></td>
                  <td class="col-2 text-center"><%= user.isAdmin %></td>      
                  <td class="col-6 text-center"><%= user.coNumber %></td>                  
               </tr>
            <% }) %>
         </tbody>
      </table>

      <div class="form-group mt-3">
         <a href="/users/new"><button type="submit" class="btn btn-light border text-underline-hover">새로운 User 등록</button></a>
      </div>
   </div>

</body>
</html>
